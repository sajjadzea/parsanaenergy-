{
  "name": "parsanaenergy-root",
  "private": true,
  "packageManager": "pnpm@8.15.8",
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "postbuild": "node update-hashed-assets.js",
    "dev": "pnpm -r run dev",
    "lint": "eslint \"docs/**/*.{js,jsx,ts,tsx}\" \"decision-tree-app/**/*.{js,jsx,ts,tsx}\" --max-warnings=0",
    "build:widget": "pnpm --filter decision-tree-app run build-widget",
    "build:site": "pnpm --filter docs run build",
    "preview:dist": "pnpm -C docs preview",
    "sync:typography": "node scripts/sync-typography.mjs",
    "prebuild:docs": "pnpm sync:typography",
    "prebuild:site": "pnpm node scripts/generate-posts.mjs && pnpm node scripts/generate-articles.mjs && pnpm node scripts/minify-articles.mjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "terser": "^5.43.1"
  }
}
